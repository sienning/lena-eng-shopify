{% schema %}
{
  "name": "Button",
  "settings": [
    {
      "id": "text-box",
      "type": "text",
      "label": "Heading",
      "default": "Title"
    },
    {
      "id": "link",
      "type": "url",
      "label": "Button link"
    },
    {
      "id": "linktext",
      "type": "text",
      "label": "Button text",
      "default": "Click Here"
    },
    {
      "id": "button-color",
      "type": "color",
      "label": "Background color",
      "default": "#ffa729"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Button Size",
      "default": "medium",
      "options": [
        {
          "label": "Small",
          "value": "small"
        },
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Large",
          "value": "large"
        }
      ]
    }
  ],
  "presets": [
    {
        "category": "Button",
        "name": "Button",
        "settings": {
          "text-box": "Title",
          "linktext": "Click Here",
          "button-color": "#ffa729"
        }
      }
    ]
}
{% endschema %}

