  <div id="section-cta" style="
  width: fit-content;
  text-align: center;
  margin: auto;">
    <h3> {{ section.settings.text-box }} </h3>
    <a href="{{ section.settings.link }}" class="btn btn-color btn-{{ section.settings.height }}" style="background-color: {{ section.settings.button-color }};" >{{ section.settings.linktext }}</a>
  </div>
